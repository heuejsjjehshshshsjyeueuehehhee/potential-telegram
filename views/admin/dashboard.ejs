<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard | AnimeVerse</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

    <div class="sidebar">
        <div class="brand">Admin<span style="color:#fff">Panel</span></div>
        <div class="menu">
            <a href="/admin/dashboard" class="active"><i class="fas fa-chart-pie"></i> <span>Dashboard</span></a>
            <a href="/admin/add-anime"><i class="fas fa-plus-circle"></i> <span>Add Anime</span></a>
            <a href="/admin/manage-anime"><i class="fas fa-layer-group"></i> <span>Library</span></a>
            <a href="/admin/trending"><i class="fas fa-fire"></i> <span>Spotlight</span></a>
            <a href="/admin/settings"><i class="fas fa-cog"></i> <span>Settings</span></a>
            <a href="/" target="_blank"><i class="fas fa-external-link-alt"></i> <span>Visit Site</span></a>
            <a href="/auth/logout" style="margin-top:auto; color:#ff4757;"><i class="fas fa-sign-out-alt"></i> <span>Logout</span></a>
        </div>
    </div>

    <div class="main-content">
        
        <div class="page-header">
            <div class="page-title">Overview</div>
            <a href="/admin/run-tracker" class="btn-primary">
                <i class="fas fa-sync-alt"></i> Run AutoTracker
            </a>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <h3><%= stats.totalAnime %></h3>
                <p>Total Anime</p>
                <i class="fas fa-tv stat-icon"></i>
            </div>
            <div class="stat-card">
                <h3><%= stats.totalEpisodes %></h3>
                <p>Total Episodes</p>
                <i class="fas fa-film stat-icon"></i>
            </div>
            <div class="stat-card">
                <h3 style="color: var(--primary)"><%= stats.activeTracking %></h3>
                <p>Active Trackers</p>
                <i class="fas fa-radar stat-icon"></i>
            </div>
        </div>

        <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 20px;">
            
            <div class="panel-section">
                <div class="section-head">
                    <h4><i class="fas fa-terminal"></i> AutoTracker Logs</h4>
                </div>
                <div class="log-list">
                    <% if (logs && logs.length > 0) { %>
                        <% logs.forEach(log => { %>
                            <div class="log-item">
                                <span>
                                    <% if(log.type === 'success') { %> 
                                        <span class="badge-success">NEW</span> 
                                    <% } else if(log.type === 'error') { %> 
                                        <span class="badge-error">ERR</span> 
                                    <% } else { %>
                                        <i class="fas fa-info-circle" style="color:#666"></i>
                                    <% } %>
                                    &nbsp; <%= log.msg %>
                                </span>
                                <span class="log-time"><%= log.time %></span>
                            </div>
                        <% }) %>
                    <% } else { %>
                        <div style="text-align:center; color:#555; padding: 20px;">No logs available yet.</div>
                    <% } %>
                </div>
            </div>

            <div class="panel-section">
                <div class="section-head">
                    <h4>Quick Actions</h4>
                </div>
                <div style="display: flex; flex-direction: column; gap: 10px;">
                    <a href="/admin/add-anime" class="btn-primary" style="text-align:center; background:#333; color:#fff;">Add New Anime</a>
                    <a href="/admin/trending" class="btn-primary" style="text-align:center; background:#333; color:#fff;">Manage Homepage</a>
                    <a href="/admin/settings" class="btn-primary" style="text-align:center; background:#333; color:#fff;">Site Settings</a>
                </div>
            </div>

        </div>
    </div>

</body>
</html>